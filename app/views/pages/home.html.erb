<% if user_signed_in? %>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <%= link_to "Create Document", new_document_path, class: 'btn btn-primary', method: :get %>
    </div>
  </div>
<% else %>
  <div class="jumbotron text-center">
    <h1>Welcome</h1>
    <p>Please register or sign in</p>
    <div class="row text-center">
        <%= link_to "Sign in", new_user_session_path, class: 'btn btn-primary', method: :get %>
        <%= link_to "Register", new_user_registration_path, class: 'btn btn-success', method: :get %>
    </div>
  </div>
<% end %>