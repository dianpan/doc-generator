<%= bootstrap_form_for :document, label_errors: true, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.number_field :loan_amount, prepend: "$", required: true, pattern: "/[1-9][0-9]*/", title: "loan amount must be at least $1", class: 'form-control', label_class: "required" %>
  </div>
  <div class="form-group">
    <%= f.number_field :down_payment, prepend: "$", required: true, pattern: "/^\d+$/", title: "down payment cannot be negative", label_class: "required" %>
  </div>
  <div class="form-group">
    <%= f.number_field :interest_rate, append: "%", required: true, title: "interest rate cannot be negative", label_class: "required" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit" %>
  </div>
<% end %>
