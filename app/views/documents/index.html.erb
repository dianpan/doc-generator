<div class="col-md-6 col-md-offset-3">
  <h2>Your Documents</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Loan Amount</th>
        <th>Down Payment</th>
        <th>Interest Rate</th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |doc| %>
      <tr>
        <th scope="row"><%= doc.id %></th>
        <td>$<%= doc.loan_amount %></td>
        <td>$<%= doc.down_payment %></td>
        <td>%<%= doc.interest_rate %></td>
        <td><%= link_to 'View', doc.file.url, :target => "_blank", class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= render "modal" %>
</div>